{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./build",
		"rootDir": "./",
		"baseUrl": "./",
		"strict": true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["*.ts"],
	"exclude": ["./node_modules"]
}
